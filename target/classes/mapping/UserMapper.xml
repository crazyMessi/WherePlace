<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.whereplace.mapper.UserMapper">

    <resultMap id="UserinformationResultMap" type="com.example.whereplace.entity.Userinformation">
        <result column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="password" property="password"/>
        <result column="user_type" property="userType"/>
    </resultMap>

    <insert id="register"
            useGeneratedKeys="true" keyProperty="userId">
        insert into
        user_information (user_name,password)
        values (#{userName},#{password})
    </insert>


    <select id="login" resultType="java.lang.String">
        select password from user_information where user_id=#{userId}
    </select>


</mapper>